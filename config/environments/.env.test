# MediaNest Test Environment Configuration
# This file is safe to commit as it contains no secrets

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

NODE_ENV=test
APP_NAME=medianest
APP_VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

MEDIANEST_BACKEND_PORT=4001
MEDIANEST_BACKEND_HOST=localhost
BACKEND_API_PREFIX=/api/v1

MEDIANEST_FRONTEND_PORT=3001
MEDIANEST_FRONTEND_HOST=localhost

CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL=postgresql://medianest_test:test_password_123@localhost:5432/medianest_test
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medianest_test
DB_USER=medianest_test
DB_PASSWORD=test_password_123
DB_SSL=false
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=5000

DB_MIGRATE_ON_START=true
DB_SEED_ON_START=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_PREFIX=medianest:test:
REDIS_TTL=300
REDIS_MAX_RETRIES=2

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Test-specific secrets (deterministic for testing)
JWT_SECRET=test-jwt-secret-deterministic-for-consistent-tests
JWT_EXPIRE_IN=1h
JWT_REFRESH_EXPIRE_IN=2h
JWT_ISSUER=medianest-test

SESSION_SECRET=test-session-secret-deterministic-for-consistent-tests
SESSION_MAX_AGE=3600000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

SECURITY_HELMET_ENABLED=false
SECURITY_RATE_LIMIT_ENABLED=false
SECURITY_RATE_LIMIT_WINDOW=15
SECURITY_RATE_LIMIT_MAX_REQUESTS=10000

# Faster hashing for tests
BCRYPT_ROUNDS=4

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Mock all external services in test
EMAIL_PROVIDER=mock
EMAIL_API_KEY=test-mock-key
EMAIL_FROM=test@medianest.test
EMAIL_FROM_NAME=MediaNest Test

STORAGE_PROVIDER=memory
STORAGE_LOCAL_PATH=./test-uploads

EXTERNAL_API_TIMEOUT=5000
EXTERNAL_API_RETRY_ATTEMPTS=1

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Minimal logging in tests
LOG_LEVEL=warn
LOG_FORMAT=simple
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/test.log
LOG_FILE_MAX_SIZE=5m
LOG_FILE_MAX_FILES=1

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

DEBUG_ENABLED=false
DEBUG_NAMESPACE=
PROFILING_ENABLED=false

WATCH_MODE=false
AUTO_RESTART=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test-specific database (same as main DB_* for simplicity)
TEST_DATABASE_URL=postgresql://medianest_test:test_password_123@localhost:5432/medianest_test
TEST_REDIS_URL=redis://localhost:6379/1

# Optimized timeouts for fast tests
TEST_TIMEOUT=10000
TEST_SETUP_TIMEOUT=30000
TEST_TEARDOWN_TIMEOUT=10000

# =============================================================================
# MONITORING & METRICS
# =============================================================================

HEALTH_CHECK_ENABLED=false
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=2000

METRICS_ENABLED=false
METRICS_PORT=9091
METRICS_PATH=/metrics

APM_ENABLED=false
APM_SERVICE_NAME=medianest-test
APM_ENVIRONMENT=test

# =============================================================================
# DOCKER & CONTAINERIZATION
# =============================================================================

DOCKER_NETWORK=medianest-test-network
DOCKER_COMPOSE_PROJECT_NAME=medianest-test

CONTAINER_HEALTH_CHECK_INTERVAL=10s
CONTAINER_HEALTH_CHECK_TIMEOUT=5s
CONTAINER_HEALTH_CHECK_RETRIES=2

# =============================================================================
# TEST-SPECIFIC CONFIGURATION
# =============================================================================

# Test runner configuration
TEST_RUNNER=vitest
TEST_COVERAGE_THRESHOLD=80
TEST_PARALLEL=true
TEST_MAX_WORKERS=4

# Database cleanup between tests
TEST_DB_CLEANUP_STRATEGY=truncate
TEST_DB_ISOLATION=true

# Mock configuration
TEST_MOCK_EXTERNAL_APIS=true
TEST_MOCK_FILE_SYSTEM=true
TEST_MOCK_TIME=false
