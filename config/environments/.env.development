# MediaNest Development Environment Configuration
# This file is safe to commit as it contains no secrets

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

NODE_ENV=development
APP_NAME=medianest
APP_VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

MEDIANEST_BACKEND_PORT=4000
MEDIANEST_BACKEND_HOST=localhost
BACKEND_API_PREFIX=/api/v1

MEDIANEST_FRONTEND_PORT=3000
MEDIANEST_FRONTEND_HOST=localhost

CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL=postgresql://medianest_user:dev_password_123@localhost:5432/medianest_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medianest_dev
DB_USER=medianest_user
DB_PASSWORD=dev_password_123
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=10000

DB_MIGRATE_ON_START=true
DB_SEED_ON_START=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=medianest:dev:
REDIS_TTL=3600
REDIS_MAX_RETRIES=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Development-safe dummy secrets
JWT_SECRET=dev-jwt-secret-not-for-production-use-only
JWT_EXPIRE_IN=24h
JWT_REFRESH_EXPIRE_IN=7d
JWT_ISSUER=medianest-dev

SESSION_SECRET=dev-session-secret-not-for-production-use-only
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

SECURITY_HELMET_ENABLED=false
SECURITY_RATE_LIMIT_ENABLED=false
SECURITY_RATE_LIMIT_WINDOW=15
SECURITY_RATE_LIMIT_MAX_REQUESTS=1000

BCRYPT_ROUNDS=8

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Mock services for development
EMAIL_PROVIDER=mock
EMAIL_API_KEY=dev-mock-key
EMAIL_FROM=dev@medianest.local
EMAIL_FROM_NAME=MediaNest Dev

STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/dev.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=3

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

DEBUG_ENABLED=true
DEBUG_NAMESPACE=medianest:*
PROFILING_ENABLED=true

WATCH_MODE=true
AUTO_RESTART=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

TEST_DATABASE_URL=postgresql://medianest_user:dev_password_123@localhost:5432/medianest_test
TEST_REDIS_URL=redis://localhost:6379/1

TEST_TIMEOUT=30000
TEST_SETUP_TIMEOUT=60000
TEST_TEARDOWN_TIMEOUT=30000

# =============================================================================
# MONITORING & METRICS
# =============================================================================

HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

APM_ENABLED=false
APM_SERVICE_NAME=medianest-dev
APM_ENVIRONMENT=development

# =============================================================================
# DOCKER & CONTAINERIZATION
# =============================================================================

DOCKER_NETWORK=medianest-dev-network
DOCKER_COMPOSE_PROJECT_NAME=medianest-dev

CONTAINER_HEALTH_CHECK_INTERVAL=30s
CONTAINER_HEALTH_CHECK_TIMEOUT=10s
CONTAINER_HEALTH_CHECK_RETRIES=3
