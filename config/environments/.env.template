# MediaNest Environment Configuration Template
# Copy this file to .env.local and customize for your environment
# NEVER commit actual .env files with secrets to version control

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment type: development | test | production
NODE_ENV=development

# Application identification
APP_NAME=medianest
APP_VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend server configuration
MEDIANEST_BACKEND_PORT=4000
MEDIANEST_BACKEND_HOST=localhost
BACKEND_API_PREFIX=/api/v1

# Frontend server configuration
MEDIANEST_FRONTEND_PORT=3000
MEDIANEST_FRONTEND_HOST=localhost

# CORS configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
DATABASE_URL=postgresql://medianest_user:your_password@localhost:5432/medianest_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medianest_dev
DB_USER=medianest_user
DB_PASSWORD=your_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=10000

# Database migrations
DB_MIGRATE_ON_START=false
DB_SEED_ON_START=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=medianest:
REDIS_TTL=3600
REDIS_MAX_RETRIES=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE_IN=24h
JWT_REFRESH_EXPIRE_IN=7d
JWT_ISSUER=medianest-app

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Security headers
SECURITY_HELMET_ENABLED=true
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_WINDOW=15
SECURITY_RATE_LIMIT_MAX_REQUESTS=100

# Password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email service (example with SendGrid)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@medianest.com
EMAIL_FROM_NAME=MediaNest

# File storage (example with AWS S3)
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=medianest-uploads

# External API integrations
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Development and debugging
DEBUG_ENABLED=false
DEBUG_NAMESPACE=medianest:*
PROFILING_ENABLED=false

# Hot reload and watch mode
WATCH_MODE=true
AUTO_RESTART=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database
TEST_DATABASE_URL=postgresql://medianest_user:your_password@localhost:5432/medianest_test
TEST_REDIS_URL=redis://localhost:6379/1

# Test timeouts
TEST_TIMEOUT=30000
TEST_SETUP_TIMEOUT=60000
TEST_TEARDOWN_TIMEOUT=30000

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# Metrics collection
METRICS_ENABLED=false
METRICS_PORT=9090
METRICS_PATH=/metrics

# Application performance monitoring
APM_ENABLED=false
APM_SERVICE_NAME=medianest
APM_ENVIRONMENT=${NODE_ENV}

# =============================================================================
# DOCKER & CONTAINERIZATION
# =============================================================================

# Docker configuration
DOCKER_NETWORK=medianest-network
DOCKER_COMPOSE_PROJECT_NAME=medianest

# Container health checks
CONTAINER_HEALTH_CHECK_INTERVAL=30s
CONTAINER_HEALTH_CHECK_TIMEOUT=10s
CONTAINER_HEALTH_CHECK_RETRIES=3
