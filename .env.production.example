# MediaNest Production Environment Configuration
# Copy this file to .env.production and fill in your values

# Application
NODE_ENV=production
PORT=4000
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api

# Domain Configuration
DOMAIN_NAME=your-domain.com

# Database
DATABASE_URL=postgresql://medianest:CHANGE_ME@postgres:5432/medianest?schema=public

# Redis
REDIS_URL=redis://:CHANGE_ME@redis:6379

# JWT Configuration
JWT_SECRET=GENERATE_WITH_npm_run_generate-secrets
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=medianest
JWT_AUDIENCE=medianest-users

# NextAuth.js
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=GENERATE_WITH_npm_run_generate-secrets

# Plex Configuration
PLEX_CLIENT_ID=YOUR_PLEX_CLIENT_ID
PLEX_CLIENT_SECRET=YOUR_PLEX_CLIENT_SECRET
PLEX_APP_NAME=MediaNest
PLEX_APP_VERSION=1.0.0

# Encryption
ENCRYPTION_KEY=GENERATE_WITH_npm_run_generate-secrets_MIN_32_CHARS

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=https://your-domain.com

# Socket.io
SOCKET_IO_PATH=/socket.io

# External Services Defaults (encrypted in database)
DEFAULT_OVERSEERR_URL=http://overseerr:5055
DEFAULT_UPTIME_KUMA_URL=http://uptime-kuma:3001

# YouTube Downloader
YOUTUBE_DOWNLOAD_PATH=/app/downloads
YOUTUBE_MAX_FILE_SIZE=5368709120  # 5GB
YOUTUBE_CONCURRENT_DOWNLOADS=2

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-domain.com/api/v1/security/csp-report

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"  # 3 AM daily
BACKUP_RETENTION_DAYS=7

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Docker Configuration
COMPOSE_PROJECT_NAME=medianest
DOCKER_RESTART_POLICY=unless-stopped

# Resource Limits
CONTAINER_MEMORY_LIMIT=1g
CONTAINER_CPU_LIMIT=1.0

# SSL Certificate Paths (for Nginx)
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem