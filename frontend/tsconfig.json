{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve", 
    "module": "esnext",
    "incremental": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*", "./lib/*"],
      "@/hooks/*": ["./src/hooks/*", "./hooks/*"],
      "@/services/*": ["./src/services/*", "./services/*"],
      "@/contexts/*": ["./contexts/*"],
      "@/types/*": ["./types/*"],
      "@/utils/*": ["./utils/*"],
      "@medianest/shared": ["../shared/src"],
      "@medianest/shared/*": ["../shared/src/*"]
    },
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleDetection": "force", 
    "moduleResolution": "bundler",
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "next-env.d.ts",
    "types/vitest.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}