{
  "projectToken": "CHROMATIC_PROJECT_TOKEN",
  "buildScriptName": "build-storybook",
  "onlyChanged": true,
  "exitZeroOnChanges": true,
  "autoAcceptChanges": false,
  "externals": ["public/**", "src/app/globals.css", "tailwind.config.ts"],
  "skip": "dependabot/**",
  "ignoreLastBuildOnBranch": ["main"],
  "threshold": 0.2,
  "diffThreshold": 0.063,
  "delay": 300,
  "pauseAnimationAtEnd": true,
  "debug": false,
  "logLevel": "info",
  "allowConsoleErrors": false,
  "storybookBuildDir": "storybook-static",
  "zip": false,
  "traceChanged": "expanded",
  "diagnostics": true,
  "fileHashing": true,
  "forceRebuild": false,
  "uploadMetadata": true,
  "junitReport": true,
  "coverage": {
    "include": ["src/components/**"],
    "exclude": ["**/*.test.*", "**/*.spec.*"],
    "threshold": 80
  },
  "branchName": "${GITHUB_HEAD_REF:-${GITHUB_REF_NAME}}",
  "repositorySlug": "${GITHUB_REPOSITORY}",
  "fromCI": true,
  "interactive": false
}
