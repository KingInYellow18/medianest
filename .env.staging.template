# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_ENV=staging
APP_NAME=MediaNest-Staging
APP_VERSION=1.0.0-staging
APP_URL=https://staging.medianest.yourdomain.com
API_BASE_URL=https://api-staging.medianest.yourdomain.com

# Server Configuration
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=https://staging.medianest.yourdomain.com
BACKEND_URL=https://api-staging.medianest.yourdomain.com

# Development Features
DEBUG=true
VERBOSE_LOGGING=true
DETAILED_ERRORS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Staging Database - REPLACE WITH ACTUAL VALUES
DATABASE_URL=postgresql://REPLACE_USERNAME:REPLACE_PASSWORD@REPLACE_HOST:5432/medianest_staging
DB_HOST=REPLACE_HOST
DB_PORT=5432
DB_NAME=medianest_staging
DB_USER=REPLACE_USERNAME
DB_PASSWORD=REPLACE_PASSWORD
DB_SSL=prefer

# Database Pool Configuration
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_CONNECTION_TIMEOUT=10000

# Database Development Features
DB_LOGGING=true
DB_SYNC=false
DB_DROP_SCHEMA=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Staging Cache - REPLACE WITH ACTUAL VALUES
REDIS_URL=redis://REPLACE_HOST:6379
REDIS_HOST=REPLACE_HOST
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_PASSWORD
REDIS_DB=0
REDIS_TLS=false

# Redis Session Configuration
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
REDIS_QUEUE_DB=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration - REPLACE WITH ACTUAL SECRETS
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=REPLACE_WITH_REFRESH_SECRET
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=REPLACE_WITH_SESSION_SECRET
SESSION_NAME=medianest_session_staging
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=lax

# Password Security
BCRYPT_ROUNDS=8

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================
# Plex Media Server - REPLACE WITH ACTUAL VALUES
PLEX_TOKEN=REPLACE_WITH_PLEX_TOKEN
PLEX_URL=https://REPLACE_PLEX_HOST:32400
PLEX_CLIENT_IDENTIFIER=medianest-staging
PLEX_PRODUCT=MediaNest-Staging
PLEX_VERSION=1.0.0-staging

# Overseerr Integration - REPLACE WITH ACTUAL VALUES
OVERSEERR_URL=https://REPLACE_OVERSEERR_HOST
OVERSEERR_API_KEY=REPLACE_WITH_OVERSEERR_API_KEY

# YouTube Integration - REPLACE WITH ACTUAL API KEY
YOUTUBE_API_KEY=REPLACE_WITH_YOUTUBE_API_KEY
YT_DLP_PATH=/usr/local/bin/yt-dlp
YOUTUBE_DOWNLOAD_PATH=/var/media/staging/youtube

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/medianest/staging.log
LOG_FILE_MAX_SIZE=50m
LOG_FILE_MAX_FILES=10

# Error Tracking - REPLACE WITH ACTUAL SENTRY DSN
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
SENTRY_ENVIRONMENT=staging
SENTRY_RELEASE=1.0.0-staging
SENTRY_DEBUG=true
SENTRY_SAMPLE_RATE=1.0

# Health Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
UPTIME_KUMA_URL=https://REPLACE_UPTIME_KUMA_HOST

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration - REPLACE WITH ACTUAL VALUES
SMTP_HOST=REPLACE_SMTP_HOST
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=REPLACE_SMTP_USER
SMTP_PASSWORD=REPLACE_SMTP_PASSWORD
EMAIL_FROM=MediaNest Staging <REPLACE_EMAIL>

# Email Testing
EMAIL_PREVIEW_MODE=true
EMAIL_CATCH_ALL=REPLACE_DEVELOPER_EMAIL

# =============================================================================
# TEST-SPECIFIC CONFIGURATION
# =============================================================================
# Test environment optimizations
CACHE_TTL=300
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=1000
UPLOAD_MAX_SIZE=500mb
MEDIA_STORAGE_PATH=/var/media/staging