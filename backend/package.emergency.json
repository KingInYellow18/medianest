{
  "name": "@medianest/backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "description": "EMERGENCY BUNDLE OPTIMIZATION - Phase 1 Configuration",
  "scripts": {
    "build:emergency": "webpack --config webpack.config.emergency.js",
    "analyze:bundle": "npx webpack-bundle-analyzer dist/server.js",
    "size:check": "du -sh dist/ node_modules/ && ls -lah dist/",
