    "optimize:deps": "npm prune --production"
  },
  "dependencies": {
    "@medianest/shared": "file:../shared",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "opossum": "^8.1.4",
    "prom-client": "^15.1.3",
    "qrcode": "^1.3.3",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.10",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/ws": "^8.18.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "bundleOptimization": {
    "phase": "EMERGENCY_PHASE_1",
    "target": "<10MB",
    "original": "465MB",
    "reductionTarget": "97.8%",
    "removedPackages": [
      "@opentelemetry/* (-130MB)",
      "@prisma/client (externalized -113MB)",
      "prisma (externalized -67MB)",
      "effect (removed -33MB)",
      "playwright (dev-only -8.5MB)"
    ],
    "optimizations": [
      "All major dependencies externalized",
      "OpenTelemetry packages removed",
      "Aggressive tree shaking enabled", 
      "Production-only build",
      "Bundle analyzer integration"
    ]
  }
}