# E2E Test Environment Configuration
# Copy this file to .env.e2e and update the values for your test environment

# Application Configuration
NODE_ENV=test
TEST_BASE_URL=http://localhost:3001

# Database Configuration (Use a dedicated test database)
DATABASE_URL=postgresql://user:password@localhost:5432/medianest_e2e_test
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/medianest_e2e_test

# Redis Configuration (Optional, for session storage)
REDIS_URL=redis://localhost:6379/1
TEST_REDIS_URL=redis://localhost:6379/1

# Authentication & Security
JWT_SECRET=e2e-jwt-secret-key-for-testing-32-chars-long
ENCRYPTION_KEY=your-32-character-encryption-key-here
CSRF_SECRET=your-csrf-secret-key-here

# Plex Configuration (for OAuth testing)
PLEX_CLIENT_ID=medianest-e2e-test
PLEX_PRODUCT=MediaNest E2E Test
PLEX_VERSION=1.0.0

# Test Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_RETRIES=2
PLAYWRIGHT_WORKERS=2

# Logging
LOG_LEVEL=error
LOG_FILE=logs/e2e-test.log

# Rate Limiting (relaxed for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Mock Services (for testing without real external dependencies)
MOCK_PLEX_API=true
MOCK_OVERSEERR_API=true
MOCK_UPTIME_KUMA_API=true

# Test Data
TEST_ADMIN_EMAIL=admin@e2etest.local
TEST_USER_EMAIL=user@e2etest.local

# Browser Configuration
BROWSER_TIMEOUT=30000
PAGE_TIMEOUT=15000
ACTION_TIMEOUT=10000

# Debug Configuration
DEBUG_SCREENSHOTS=true
DEBUG_TRACES=true
DEBUG_VIDEOS=false

# CI/CD Configuration
CI=false
GITHUB_ACTIONS=false