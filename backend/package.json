{
  "name": "@medianest/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:test": "NODE_ENV=test node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:dev": "playwright test --config=playwright.dev.config.ts",
    "test:e2e:ci": "playwright test --reporter=json,junit,html",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "e2e:install": "playwright install",
    "e2e:setup": "docker-compose -f docker-compose.e2e.yml up -d",
    "e2e:teardown": "docker-compose -f docker-compose.e2e.yml down -v",
    "e2e:seed": "node tests/e2e/scripts/seed-test-data.js",
    "e2e:cleanup": "node tests/e2e/scripts/seed-test-data.js cleanup",
    "e2e:reports": "playwright show-report",
    "e2e:allure": "allure serve tests/e2e/reports/allure-results",
    "lighthouse": "lhci autorun",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "generate:key": "tsx scripts/generate-encryption-key.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@types/cookie-parser": "^1.4.9",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.56.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "opossum": "^8.1.4",
    "socket.io": "^4.7.5",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.48.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "allure-playwright": "^2.10.0",
    "eslint": "^8.57.0",
    "ioredis-mock": "^8.9.0",
    "msw": "^2.10.4",
    "nodemon": "^3.1.4",
    "playwright": "^1.48.0",
    "prisma": "^6.11.1",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
