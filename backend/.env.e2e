# E2E Test Environment Configuration
NODE_ENV=test
LOG_LEVEL=error

# Database Configuration
DATABASE_URL=postgresql://e2e_user:e2e_password@localhost:5434/medianest_e2e

# Redis Configuration
REDIS_URL=redis://localhost:6381

# JWT Configuration
JWT_SECRET=e2e-jwt-secret-key-for-testing-32-chars-long
JWT_EXPIRES_IN=1d
JWT_REMEMBER_EXPIRES_IN=30d

# Encryption Configuration
ENCRYPTION_KEY=e2e-encryption-key-32-chars-long

# Plex Configuration
PLEX_CLIENT_ID=e2e-test-client-id
PLEX_CLIENT_SECRET=e2e-test-client-secret
PLEX_API_URL=http://localhost:32400

# Overseerr Configuration
OVERSEERR_API_URL=http://localhost:5055

# Application Configuration
PORT=3001
E2E_BASE_URL=http://localhost:3001

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
ENABLE_CORS=true

# Performance Monitoring
PERFORMANCE_MONITORING=true
COLLECT_METRICS=true

# Test Configuration
PLAYWRIGHT_JUNIT_OUTPUT_NAME=results.xml
PLAYWRIGHT_HTML_REPORT=tests/e2e/reports/html