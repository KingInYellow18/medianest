# Test Environment Configuration
NODE_ENV=test
LOG_LEVEL=silent

# Database Configuration
DATABASE_URL=postgresql://test:test@localhost:5433/medianest_test

# Redis Configuration
REDIS_URL=redis://localhost:6380/0

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-32-bytes-long
JWT_ISSUER=medianest-test
JWT_AUDIENCE=medianest-test-users
JWT_EXPIRES_IN=1h
JWT_REMEMBER_EXPIRES_IN=30d

# NextAuth Configuration
NEXTAUTH_SECRET=test-nextauth-secret-key-32-bytes-long
NEXTAUTH_URL=http://localhost:3000

# Encryption Configuration
ENCRYPTION_KEY=test-encryption-key-32-bytes-long

# Plex Configuration
PLEX_CLIENT_ID=test-plex-client-id
PLEX_CLIENT_SECRET=test-plex-client-secret
PLEX_API_URL=http://localhost:32400

# Service URLs
OVERSEERR_URL=http://localhost:5055
OVERSEERR_API_KEY=test-overseerr-api-key
UPTIME_KUMA_URL=http://localhost:3001
UPTIME_KUMA_TOKEN=test-uptime-token

# Application Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Feature Flags
ENABLE_RATE_LIMITING=false
ENABLE_CSRF_PROTECTION=false
ENABLE_CORS=true

# Performance and Monitoring
PERFORMANCE_MONITORING=false
COLLECT_METRICS=false
HEALTH_CHECK_INTERVAL=30000

# YouTube Download Configuration
YOUTUBE_DOWNLOAD_PATH=/tmp/youtube-downloads
YOUTUBE_MAX_CONCURRENT_DOWNLOADS=3
YOUTUBE_RATE_LIMIT=false

# Rate Limiting Configuration
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW=900000
RATE_LIMIT_YOUTUBE_REQUESTS=10
RATE_LIMIT_YOUTUBE_WINDOW=600000
RATE_LIMIT_MEDIA_REQUESTS=50
RATE_LIMIT_MEDIA_WINDOW=900000

# Database Configuration
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30000

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin-password

# Metrics and Monitoring
METRICS_TOKEN=test-metrics-token
METRICS_ENDPOINT=http://localhost:9090/metrics
ERROR_REPORTING_ENDPOINT=http://localhost:9090/errors