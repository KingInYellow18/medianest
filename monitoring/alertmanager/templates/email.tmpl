{{ define "email.critical.html" }}
<!DOCTYPE html>
<html>
<head>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; margin: 0; padding: 20px; background-color: #f4f4f4; }
        .container { max-width: 600px; margin: 0 auto; background: white; padding: 20px; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
        .header { background-color: #dc3545; color: white; padding: 15px; text-align: center; border-radius: 5px 5px 0 0; margin: -20px -20px 20px -20px; }
        .alert-box { background-color: #f8f9fa; border-left: 4px solid #dc3545; padding: 15px; margin: 10px 0; }
        .severity-critical { border-left-color: #dc3545; background-color: #f8d7da; }
        .severity-warning { border-left-color: #ffc107; background-color: #fff3cd; }
        .severity-info { border-left-color: #17a2b8; background-color: #d1ecf1; }
        .details { background-color: #e9ecef; padding: 10px; border-radius: 3px; margin: 10px 0; }
        .button { display: inline-block; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 3px; margin: 5px; }
        .footer { margin-top: 20px; padding-top: 20px; border-top: 1px solid #dee2e6; font-size: 12px; color: #6c757d; text-align: center; }
        .timestamp { font-size: 11px; color: #6c757d; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üö® CRITICAL ALERT: MEDIANEST</h1>
            <p>Immediate attention required</p>
        </div>

        {{ range .Alerts }}
        <div class="alert-box severity-{{ .Labels.severity }}">
            <h2>{{ .Annotations.summary }}</h2>
            
            <div class="details">
                <strong>Service:</strong> {{ .Labels.service }}<br>
                <strong>Component:</strong> {{ .Labels.component }}<br>
                <strong>Severity:</strong> {{ .Labels.severity | toUpper }}<br>
                {{ if .Labels.instance }}<strong>Instance:</strong> {{ .Labels.instance }}<br>{{ end }}
                {{ if .Labels.event_type }}<strong>Event Type:</strong> {{ .Labels.event_type }}<br>{{ end }}
                {{ if .Labels.attack_type }}<strong>Attack Type:</strong> {{ .Labels.attack_type }}<br>{{ end }}
                {{ if .Labels.source_ip }}<strong>Source IP:</strong> {{ .Labels.source_ip }}<br>{{ end }}
                <strong>Fired At:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 UTC" }}
            </div>

            <p><strong>Description:</strong><br>{{ .Annotations.description }}</p>

            <div style="margin-top: 15px;">
                {{ if .Annotations.runbook_url }}
                <a href="{{ .Annotations.runbook_url }}" class="button">üìñ View Runbook</a>
                {{ end }}
                {{ if .Annotations.dashboard_url }}
                <a href="{{ .Annotations.dashboard_url }}" class="button">üìä View Dashboard</a>
                {{ end }}
            </div>
        </div>
        {{ end }}

        <div class="footer">
            <p>This alert was generated by MEDIANEST monitoring system.<br>
            For support, contact: ops@medianest.local</p>
            <p class="timestamp">Generated at: {{ now | date "2006-01-02 15:04:05 UTC" }}</p>
        </div>
    </div>
</body>
</html>
{{ end }}

