# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for specific files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.env.example text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.nvmrc text eol=lf
.node-version text eol=lf
Dockerfile text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary