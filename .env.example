# MediaNest Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# Database Configuration - TEST/DEVELOPMENT ONLY
# =============================================================================
DATABASE_URL="postgresql://medianest_test:test_password@localhost:5432/medianest_test"
REDIS_URL="redis://localhost:6379/0"

# =============================================================================
# Authentication & Security - TEST VALUES ONLY
# =============================================================================
JWT_SECRET="test-jwt-secret-replace-for-production-use"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# NextAuth Configuration (for frontend)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="test-nextauth-secret-replace-for-production"

# =============================================================================
# Plex Integration - REPLACE WITH YOUR VALUES
# =============================================================================
PLEX_CLIENT_ID="replace-with-your-plex-client-id"
PLEX_CLIENT_SECRET="replace-with-your-plex-client-secret"
PLEX_SERVER_URL="http://localhost:32400"
PLEX_SERVER_TOKEN="replace-with-your-plex-token"

# =============================================================================
# External Services - TEST/DEVELOPMENT ENDPOINTS
# =============================================================================
# Overseerr (Media Request Management)
OVERSEERR_URL="http://localhost:5055"
OVERSEERR_API_KEY="replace-with-your-overseerr-api-key"

# Uptime Kuma (Service Monitoring)
UPTIME_KUMA_URL="http://localhost:3001"
UPTIME_KUMA_API_KEY="replace-with-your-uptime-kuma-api-key"

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV="development"
PORT=8000
FRONTEND_URL="http://localhost:3000"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_ENABLED="true"
LOG_FILE_PATH="./logs/application.log"

# File Upload Configuration
UPLOAD_MAX_SIZE="100MB"
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Optional Features
# =============================================================================
# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="MediaNest <noreply@medianest.local>"

# Sentry Error Tracking (optional)
SENTRY_DSN="your-sentry-dsn"

# YouTube Integration (for downloading)
YOUTUBE_DL_PATH="/usr/local/bin/yt-dlp"
YOUTUBE_DOWNLOAD_PATH="./downloads"

# =============================================================================
# Docker Configuration (when using Docker)
# =============================================================================
# When running with Docker, use these URLs instead:
# DATABASE_URL="postgresql://medianest:medianest@postgres:5432/medianest"
# REDIS_URL="redis://redis:6379/0"