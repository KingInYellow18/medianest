{
  "name": "medianest",
  "version": "1.0.0",
  "private": true,
  "description": "Unified web portal for managing Plex media server and related services",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kinginyellow/medianest.git"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --build --verbose",
    "build:all": "npm run build",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:integration": "vitest run tests/integration --reporter=verbose",
    "test:integration:watch": "vitest tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:all": "npm run lint && cd frontend && npm run lint && cd ../backend && npm run lint && cd ../shared && npm run lint",
    "clean": "rimraf dist && rimraf node_modules",
    "type-check": "tsc --noEmit",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "generate-secrets": "node scripts/generate-secrets.js",
    "prepare": "simple-git-hooks",
    "gitignore:status": "node scripts/gitignore-manager.js --status",
    "gitignore:apply": "node scripts/gitignore-manager.js",
    "gitignore:list": "node scripts/gitignore-manager.js --list",
    "perf:test": "node scripts/performance-tests.js",
    "perf:db": "node scripts/database-performance-analyzer.js",
    "perf:analyze": "npm run perf:db && npm run perf:test",
    "perf:monitor": "npm run perf:analyze && echo 'Performance monitoring complete'",
    "perf:baseline": "npm run build && npm run perf:analyze > docs/performance-baseline.txt"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.54.1",
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.14.10",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.13.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "types-react-codemod": "^3.5.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "media",
    "plex",
    "server",
    "management",
    "portal"
  ],
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@prisma/client": "^6.15.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "prisma": "^6.15.0",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^12.0.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  }
}
