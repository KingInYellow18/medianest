{
  "name": "medianest",
  "version": "1.0.0",
  "private": true,
  "description": "Unified web portal for managing Plex media server and related services",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "npm run build --workspace=shared",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "vitest run --workspace ./vitest.workspace.ts",
    "test:watch": "vitest --workspace ./vitest.workspace.ts",
    "test:ui": "vitest --ui --workspace ./vitest.workspace.ts",
    "test:unit": "vitest run --workspace ./vitest.workspace.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:coverage": "vitest run --coverage --workspace ./vitest.workspace.ts",
    "test:coverage:ui": "vitest --ui --coverage --workspace ./vitest.workspace.ts",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules",
    "type-check": "npm run type-check --workspaces --if-present",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "npm run prisma:migrate --workspace=backend",
    "db:generate": "npm run prisma:generate --workspace=backend",
    "db:studio": "npm run prisma:studio --workspace=backend",
    "generate-secrets": "node scripts/generate-secrets.js",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.54.1",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "vitest": "^1.6.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
