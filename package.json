{
  "name": "medianest",
  "version": "1.0.0",
  "private": true,
  "description": "Unified web portal for managing Plex media server and related services",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kinginyellow/medianest.git"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --build --verbose",
    "build:all": "npm run build",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:smoke": "playwright test --grep=\"@smoke\"",
    "test:e2e:regression": "playwright test --grep=\"@regression\"",
    "test:e2e:auth": "playwright test --grep=\"@auth\"",
    "test:e2e:api": "playwright test --grep=\"@api\"",
    "test:e2e:visual": "playwright test --project=visual-chrome --grep=\"@visual\"",
    "test:e2e:a11y": "playwright test --project=accessibility --grep=\"@accessibility\"",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:integration": "vitest run tests/integration --reporter=verbose",
    "test:integration:watch": "vitest tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:all": "npm run lint && cd frontend && npm run lint && cd ../backend && npm run lint && cd ../shared && npm run lint",
    "clean": "rimraf dist && rimraf node_modules",
    "type-check": "tsc --noEmit",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "generate-secrets": "node scripts/generate-secrets.js",
    "prepare": "simple-git-hooks",
    "gitignore:status": "node scripts/gitignore-manager.js --status",
    "gitignore:apply": "node scripts/gitignore-manager.js",
    "gitignore:list": "node scripts/gitignore-manager.js --list",
    "perf:test": "node scripts/performance-tests.js",
    "perf:db": "node scripts/database-performance-analyzer.js",
    "perf:analyze": "npm run perf:db && npm run perf:test",
    "perf:monitor": "npm run perf:analyze && echo 'Performance monitoring complete'",
    "perf:baseline": "npm run build && npm run perf:analyze > docs/performance-baseline.txt"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "allure-playwright": "^3.3.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "playwright-core": "^1.55.0",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "types-react-codemod": "^3.5.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "media",
    "plex",
    "server",
    "management",
    "portal"
  ],
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}
