{
  "name": "medianest",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:shared": "npm run build --workspace=shared",
    "build:backend": "npm run build:shared && npm run build --workspace=backend",
    "build:frontend": "npm run build:shared && npm run build --workspace=frontend",
    "start": "npm run start:backend",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run start --workspace=frontend",
    "clean": "npm run clean --workspaces",
    "docker:build": "docker build -t medianest .",
    "docker:run": "docker run -p 3000:3000 -p 8000:8000 medianest",
    "docker:test": "docker-compose up -d",
    "db:setup": "npm run db:generate --workspace=backend && npm run db:migrate --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
