{
  "name": "medianest",
  "version": "1.0.0",
  "private": true,
  "description": "Unified web portal for managing Plex media server and related services",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "npm run build --workspace=shared",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules",
    "type-check": "npm run type-check --workspaces --if-present",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "install:all": "npm install",
    "db:migrate": "npm run prisma:migrate --workspace=backend",
    "db:generate": "npm run prisma:generate --workspace=backend",
    "db:studio": "npm run prisma:studio --workspace=backend",
    "generate-secrets": "node scripts/generate-secrets.js",
    "dev-workflow": "node scripts/dev-workflow.js",
    "setup": "node scripts/dev-workflow.js setup",
    "audit": "node scripts/dev-workflow.js audit",
    "check-deps": "node scripts/dev-workflow.js check-deps",
    "ci": "node scripts/dev-workflow.js ci",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:e2e": "echo \"E2E tests not yet implemented\"",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "ioredis": "^5.4.1",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
