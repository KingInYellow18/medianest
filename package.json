{
  "name": "medianest",
  "version": "2.0.0",
  "description": "Advanced Media Management Platform",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run build:api && npm run build:web",
    "build:api": "tsc --project tsconfig.json",
    "build:web": "vite build",
    "build:docs": "./scripts/build-docs.sh",
    "build:docs:dev": "./scripts/build-docs.sh --dev",
    "build:docs:fast": "./scripts/build-docs.sh --skip-deps --skip-tests",
    "start": "npm run start:api",
    "start:api": "node dist/server.js",
    "start:web": "vite preview",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "nodemon --exec ts-node src/server.ts",
    "dev:web": "vite",
    "dev:docs": "mkdocs serve",
    "dev:docs:hot": "mkdocs serve --dev-addr=0.0.0.0:8001",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:accessibility": "playwright test --grep @accessibility",
    "test:e2e:visual": "playwright test --grep @visual",
    "test:e2e:performance": "playwright test --grep @performance",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:regression": "playwright test --grep @regression",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:api": "jest --config jest.api.config.js",
    "test:web": "jest --config jest.web.config.js",
    "test:docs": "linkchecker site/index.html",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run build && npm run deploy:api",
    "deploy:api": "pm2 start ecosystem.config.js",
    "deploy:docs": "./scripts/deploy-docs.sh",
    "deploy:docs:github": "./scripts/deploy-docs.sh --github",
    "deploy:docs:netlify": "./scripts/deploy-docs.sh --netlify",
    "deploy:docs:s3": "./scripts/deploy-docs.sh --s3",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "setup": "npm install && npm run build && npm run db:migrate",
    "setup:dev": "npm install && npm run db:migrate && npm run db:seed",
    "clean": "rimraf dist site node_modules/.cache",
    "clean:docs": "rimraf site",
    "clean:all": "npm run clean && rimraf node_modules",
    "docker:build": "docker build -t medianest:latest .",
    "docker:run": "docker run -p 8080:8080 medianest:latest",
    "docker:compose": "docker-compose up -d",
    "docker:docs": "docker run --rm -v \"$PWD\":/docs squidfunk/mkdocs-material build",
    "analyze": "npm run analyze:bundle",
    "analyze:bundle": "webpack-bundle-analyzer dist/static/js/*.js",
    "security": "npm audit && npm run security:deps",
    "security:deps": "npm audit fix",
    "docs:validate": "mkdocs config-validation",
    "docs:linkcheck": "linkchecker --check-extern site/index.html",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build",
    "docs:gh-deploy": "mkdocs gh-deploy",
    "release": "standard-version && git push --follow-tags origin main && npm publish",
    "release:docs": "npm run build:docs && npm run deploy:docs:github",
    "benchmark": "node scripts/benchmark.js",
    "profile": "node --prof src/server.js",
    "healthcheck": "curl -f http://localhost:8080/health || exit 1",
    "prepare": "simple-git-hooks"
  },
  "keywords": [
    "media",
    "management",
    "digital-asset-management",
    "file-organization",
    "content-management",
    "nodejs",
    "typescript",
    "react"
  ],
  "author": "MediaNest Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/medianest/medianest.git"
  },
  "bugs": {
    "url": "https://github.com/medianest/medianest/issues"
  },
  "homepage": "https://docs.medianest.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.0",
    "sharp": "^0.32.0",
    "typescript": "^5.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.1",
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "allure-playwright": "^3.3.3",
    "cypress": "^12.12.0",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html5-validator": "^1.1.3",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.10",
    "linkchecker": "^1.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "simple-git-hooks": "^2.13.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "vite": "^4.3.0",
    "webpack-bundle-analyzer": "^4.8.0"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "react/prop-types": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
