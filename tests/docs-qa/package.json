{
  "name": "medianest-docs-qa",
  "version": "1.0.0",
  "description": "MediaNest Documentation Quality Assurance Testing Suite",
  "main": "index.js",
  "scripts": {
    "test:links": "node scripts/link-checker.js",
    "test:responsive": "node scripts/responsive-tester.js",
    "test:accessibility": "node scripts/accessibility-tester.js",
    "test:performance": "node scripts/performance-tester.js",
    "test:content": "node scripts/content-validator.js",
    "test:navigation": "node scripts/navigation-tester.js",
    "test:build": "node scripts/build-tester.js",
    "test:all": "npm run test:build && npm run test:links && npm run test:responsive && npm run test:accessibility && npm run test:performance && npm run test:content && npm run test:navigation",
    "report": "node scripts/generate-report.js",
    "serve": "mkdocs serve -f ../mkdocs.yml",
    "build": "mkdocs build -f ../mkdocs.yml"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "@axe-core/playwright": "^4.8.2",
    "lighthouse": "^11.4.0",
    "markdown-link-check": "^3.11.2",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "puppeteer": "^21.6.0",
    "sharp": "^0.32.6",
    "html-validate": "^8.7.4",
    "markdownlint": "^0.32.2",
    "html5-validator": "^1.1.3",
    "sitemap-generator": "^8.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "jest": "^29.7.0"
  },
  "keywords": [
    "documentation",
    "qa",
    "testing",
    "mkdocs",
    "accessibility",
    "performance"
  ],
