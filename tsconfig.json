{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "composite": true,
    "noEmit": false,
    // Context7 Pattern: Root-level incremental compilation with project references
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "skipLibCheck": true,
    "assumeChangesOnlyAffectDirectDependencies": true
  },
  "files": [],
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "frontend/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*",
    "coverage/**/*"
  ],
  "references": [
    { "path": "./shared" },
    { "path": "./backend" },
    { "path": "./frontend" }
  ]
}
